{
    "name": "Simple Full Stack App",
    "dockerComposeFile": "docker-compose.yml",
    "service": "flaskapp",
    "shutdownAction": "stopCompose",
    "workspaceFolder": "/home/NRuser/flaskapp/",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"donjayamanne.python-extension-pack",
				"ritwickdey.LiveServer"
			]
		}
	},
    "postCreateCommand": "dos2unix /home/NRuser/flaskapp/scripts/* && chmod +x /home/NRuser/flaskapp/scripts/init.sh && /home/NRuser/flaskapp/scripts/init.sh"
}